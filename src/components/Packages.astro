function changeTab(tabId) {
  // Ocultar todos los contenidos de pestañas
  document.querySelectorAll('.tab-content').forEach(tab => {
    tab.classList.add('hidden');
    tab.classList.remove('active');
  });
  
  // Mostrar la pestaña seleccionada
  document.getElementById(tabId).classList.remove('hidden');
  document.getElementById(tabId).classList.add('active');
  
  // Actualizar botones de pestañas
  document.querySelectorAll('.tab-button').forEach(button => {
    button.classList.remove('bg-purple-600', 'text-white');
    button.classList.add('bg-purple-100', 'text-purple-800', 'hover:bg-purple-200');
  });
  
  // Resaltar el botón activo
  event.currentTarget.classList.remove('bg-purple-100', 'text-purple-800', 'hover:bg-purple-200');
  event.currentTarget.classList.add('bg-purple-600', 'text-white');
}
</script>