    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/logo-mindlife-redondo.png">
</head>
<body class="font-sans bg-white text-gray-800">
    <!-- Header/Navbar -->
    <Navbar />

    <!-- Hero Section -->
    <HeroSection />

    <!-- Beneficios Section -->
